# Pitch Decks Site - Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME="Pitch Decks Site"
DEBUG=false
SECRET_KEY=your-secret-key-change-this-in-production

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/pitch_decks

# CORS - Add your frontend URL
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# File Storage
STORAGE_TYPE=local  # "local" or "s3"
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=50

# S3 Configuration (if STORAGE_TYPE is "s3")
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=

# External Analysis Software Integration
# Update this URL to point to your analysis software
ANALYSIS_SOFTWARE_URL=http://localhost:8001/analyze
ANALYSIS_SOFTWARE_API_KEY=
ANALYSIS_TIMEOUT_SECONDS=120

# Email Configuration (Gmail example)
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@yourdomain.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_STARTTLS=true
MAIL_SSL_TLS=false

# Redis (for background tasks)
REDIS_URL=redis://localhost:6379/0

# Lead Scoring Weights (optional - defaults shown)
SCORE_WEIGHT_BUDGET=30
SCORE_WEIGHT_TIMELINE=20
SCORE_WEIGHT_MATERIAL=25
SCORE_WEIGHT_PROJECT_TYPE=15
SCORE_WEIGHT_EXPERIENCE=10
