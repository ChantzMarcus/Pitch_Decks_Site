# =============================================================================
# DATABASE
# =============================================================================
# Neon PostgreSQL (Drizzle ORM)
# Get connection string from: https://console.neon.tech/
DATABASE_URL=postgresql://username:password@hostname/database
DIRECT_URL=postgresql://username:password@ep-xxx.region.aws.neon.tech/database

# =============================================================================
# AI PROVIDERS (Choose one or more for story analysis)
# =============================================================================

# OpenAI (GPT-4o-mini recommended for cost/performance)
# Get keys: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic (Claude Haiku recommended for speed)
# Get keys: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=

# Hugging Face (Open-source models)
# Get keys: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=

# Mistral AI
# Get keys: https://console.mistral.ai/api-keys
MISTRAL_API_KEY=

# Groq (Llama models - very fast, has free tier)
# Get keys: https://console.groq.com/keys
GROQ_API_KEY=

# Cohere
COHERE_API_KEY=

# DeepSeek
DEEPSEEK_API_KEY=

# =============================================================================
# EMAIL (For sending analysis reports to leads)
# =============================================================================

# Resend (Transactional email)
# Get keys: https://resend.com/api-keys
# Free tier: 3,000 emails/month
RESEND_API_KEY=

# Email configuration
LEAD_NOTIFICATION_EMAIL=your-email@gmail.com
REPLY_TO_EMAIL=hello@filmdecks.biz

# =============================================================================
# APP CONFIGURATION
# =============================================================================

# Base URL (auto-detected in production)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# =============================================================================
# ADMIN
# =============================================================================

# Optional: Password protect admin routes
ADMIN_PASSWORD=

# =============================================================================
# FILE STORAGE (For pitch deck uploads)
# =============================================================================

# Cloudinary (Image and file hosting)
# Get credentials: https://cloudinary.com/console
# Free tier: 25 GB/month storage, 25 GB/month bandwidth
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
# Or use a single CLOUDINARY_URL (found in Cloudinary Dashboard)
# CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# =============================================================================
# LEGACY - Supabase (Will be removed after migration)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
