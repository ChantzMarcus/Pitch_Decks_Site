{
  "version": 2,
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "src/pages/api/**/*": {
      "memory": 1024,
      "maxDuration": 30
    },
    "src/app/api/**/*": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}